{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"rootDir": "src",
		"outDir": "dist",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"removeComments": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true
	},
	// Keep test/**/* in both include and exclude for type-check without build files
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
